*.md     text eol=lf
*.html   text eol=lf
*.css    text eol=lf
*.scss   text eol=lf
*.sh     text eol=lf
*.env    text eol=lf
*.Dockerfile text eol=lf
Dockerfile  text eol=lf

# ------------------------------------------------------------
# Configuration & workflow files
# ------------------------------------------------------------
*.gitignore     text eol=lf
*.gitattributes text eol=lf
*.editorconfig  text eol=lf
*.prettierrc    text eol=lf
*.eslintrc*     text eol=lf
*.babelrc*      text eol=lf
*.nvmrc         text eol=lf
*.npmrc         text eol=lf
*.yarnrc        text eol=lf
*.dockerignore  text eol=lf

# ------------------------------------------------------------
# Binary / compressed files (never modify line endings)
# ------------------------------------------------------------
*.png     binary
*.jpg     binary
*.jpeg    binary
*.gif     binary
*.ico     binary
*.svg     binary
*.pdf     binary
*.zip     binary
*.7z      binary
*.tar.gz  binary
